<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="10dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_nama_karyawan"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="15"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_nama_head"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_department"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="15"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_act_date"
                android:textColor="@android:color/darker_gray"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="15"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cateogry"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxEms="6"
            android:gravity="end"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:padding="7dp"
            android:background="@drawable/bottom_nav_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>